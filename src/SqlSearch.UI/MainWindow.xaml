<Window x:Class="SqlSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlSearch.UI"
        mc:Ignorable="d"
        Title="{x:Static local:Resources.Window_Title}"
        Icon="/Images/SqlSearch.png"
        Height="450" Width="800">

    <DockPanel LastChildFill="True">
        <local:SearchControl DockPanel.Dock="Top" Height="24" Margin="6,0,6,0" />

        <local:StatusStrip DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
