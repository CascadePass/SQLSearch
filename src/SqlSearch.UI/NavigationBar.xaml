<UserControl x:Class="SqlSearch.UI.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlSearch.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <Button Style="{StaticResource NavigationButton}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/Icons/Settings.png" Style="{StaticResource Icon}" />
                <TextBlock Text="{x:Static local:Resources.Settings}" Margin="5,0,0,0" />
            </StackPanel>
        </Button>


        <Button Style="{StaticResource NavigationButton}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/Icons/DatabaseSettings.png" Style="{StaticResource Icon}" />
                <TextBlock Text="{x:Static local:Resources.Databases}" Margin="5,0,0,0" />
            </StackPanel>
        </Button>



        <Button Style="{StaticResource NavigationButton}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/Icons/SearchProperty.png" Style="{StaticResource Icon}" />
                <TextBlock Text="{x:Static local:Resources.AdvancedSearch}" Margin="5,0,0,0" />
            </StackPanel>
        </Button>
    </StackPanel>
    
</UserControl>
