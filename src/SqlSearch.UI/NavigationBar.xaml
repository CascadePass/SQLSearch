<UserControl x:Class="SqlSearch.UI.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlSearch.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource TransparantButton}">
                <Image Source="/Images/Icons/Settings.png" Style="{StaticResource Icon}" />
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource TransparantButton}" Content="Settings" HorizontalContentAlignment="Left" />


            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource TransparantButton}">
                <Image Source="/Images/Icons/Add.png" Style="{StaticResource Icon}" />
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource TransparantButton}" Content="Add Connection" HorizontalContentAlignment="Left" />

        </Grid>
    </StackPanel>
    
</UserControl>
